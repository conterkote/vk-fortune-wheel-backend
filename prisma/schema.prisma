// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wheel {
  id      Int @id @default(1)
  jackpot Int @default(10000)
}

model Winners {
  id      String @id @default(uuid())
  User    Users  @relation(fields: [usersId], references: [id])
  name    String
  amout   String
  usersId String
}

model Prizes {
  id    String @id @default(uuid())
  amout String @unique
}

model Users {
  id         String    @id @unique
  photo_200  String
  first_name String
  balance    Int       @default(1000)
  Winners    Winners[]
}
